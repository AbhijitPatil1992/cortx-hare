#!/usr/bin/env bash
set -eu -o pipefail
export PS4='+ [${BASH_SOURCE[0]##*/}:${LINENO}${FUNCNAME[0]:+:${FUNCNAME[0]}}] '
set -x

. ci/functions.sh  # _time, ci_init_m0vg, ci_job_label, ci_success

cd $WORKSPACE_DIR

ci_init_m0vg ssu1 ssu2
for vm in ssu{1,2}; do
    _time $M0VG run --vm $vm /data/hare/ci/m0vg/init-node
    XXX_with_s3server &&
        _time $M0VG run --vm $vm /data/hare/utils/s3auth-disable
done

sed -ri "s/(name:\s*)(ssu[12])/\\1$(ci_job_label)-\\2/" \
    hare/cfgen/examples/ci-boot2{,-1confd}.yaml

$M0VG run --vm ssu1 /data/hare/ci/m0vg/ssh-keyscan $(ci_job_label)-ssu2
_time $M0VG run --vm ssu1 /data/hare/ci/m0vg/test-boot2

ci_success
