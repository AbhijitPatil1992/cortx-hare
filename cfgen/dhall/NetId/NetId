{-*- dhall -*-}

let Addr = ./Addr

-- Network identifier format (ABNF):
--
-- nid      = "0@lo" / (ipv4addr  "@" ("tcp" / "o2ib") [DIGIT])
-- ipv4addr = 1*3DIGIT "." 1*3DIGIT "." 1*3DIGIT "." 1*3DIGIT ; 0..255
let NetId =
  < lo
  | tcp : { tcp : Addr }
  | ib : { ib : Addr }  -- InfiniBand
  >

in NetId
