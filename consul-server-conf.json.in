{
  "server": true,
  "watches": [
    {
      "type": "key",
      "key": "leader",
      "args": [
        "/opt/seagate/hare/elect-rc-leader"
      ]
    },
    {
      "type": "service",
      "service": "confd",
      "handler_type": "http",
      "http_handler_config": {
        "path": "http://localhost:8080",
        "method": "POST",
        "timeout": "10s"
      }
    },
    {
      "type": "service",
      "service": "confd",
      "args": [
        "/opt/seagate/hare/watch-service"
      ]
    },
    {
      "type": "service",
      "service": "ios",
      "handler_type": "http",
      "http_handler_config": {
        "path": "http://localhost:8080",
        "method": "POST",
        "timeout": "10s"
      }
    },
    {
      "type": "service",
      "service": "ios",
      "args": [
        "/opt/seagate/hare/watch-service"
      ]
    }
  ],
  "enable_local_script_checks": true,
  "services": []
}
