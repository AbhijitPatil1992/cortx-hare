#!/usr/bin/env bash
set -eu -o pipefail
export PS4='+ [${BASH_SOURCE[0]##*/}:${LINENO}${FUNCNAME[0]:+:${FUNCNAME[0]}}] '
set -x

. /data/hare/ci/_env  # MERO_COMMIT_REF, RPMSYNC_DIR

sudo mkdir -p /var/mero
for i in {0..9}; do
    sudo dd if=/dev/zero of=/var/mero/disk$i.img bs=1M seek=9999 count=1
    sudo losetup /dev/loop$i /var/mero/disk$i.img
done

if [[ -n ${MERO_COMMIT_REF:-} ]]; then
    # `systemctl start hare-hax` command, called by `bootstrap-node`,
    # will fail unless `mero-kernel` systemd service is installed.
    sudo /data/mero/scripts/install-mero-service

    sudo make -C /data/hare devinstall
    exit
fi

add_repo() {
    local repo=$1
    if [[ $repo == ${repo#http://} ]]; then
        echo 'http:// prefix expected' >&2
        return 1
    fi
    sudo yum-config-manager --add-repo=$repo
    repo=${repo#http://}
    sudo tee -a /etc/yum.repos.d/${repo//\//_}.repo <<< 'gpgcheck=0'
}

ci_storage_url=http://ci-storage.mero.colo.seagate.com

add_repo ${ci_storage_url}${RPMSYNC_DIR}
sudo yum install -y hare
sudo usermod -aG hare vagrant

add_repo $ci_storage_url/releases/eos/s3server_uploads
sudo yum install -y log4cxx_eos log4cxx_eos-devel s3cmd

add_repo $ci_storage_url/releases/eos/BLATEST
sudo yum install -y s3server
